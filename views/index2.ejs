	<script>
		let xhr = new XMLHttpRequest();
		xhr.open('POST', '/personjson', true);
		xhr.setRequestHeader("Content-type", "application/json");
		xhr.onload = function () {  }
		let data = JSON.stringify({ firstname: 'Jane', lastname: 'Doer'});
		xhr.send(data);

